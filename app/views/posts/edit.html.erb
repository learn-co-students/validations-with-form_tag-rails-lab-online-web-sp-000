<h2>Editing "<%= @form_obj.title %>"</h2>
<h2>Editing an <%= @form_obj.class.name %></h2>
<%= form_tag("/posts/#{@form_obj.id}", method: :patch) do %>
  <% if @form_obj.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @form_obj.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
 
  <div class="field<%= ' field_with_errors' if @form_obj.errors[:title].any? %>">
    <%= label_tag "title", "Title" %>
    <%= text_field_tag "title", @form_obj.title %>
  </div>
 
  <div class="field<%= ' field_with_errors' if @form_obj.errors[:category].any? %>">
    <%= label_tag "category", "Category" %>
    <%= text_field_tag "category", @form_obj.category %>
  </div>
 
  <div class="field<%= ' field_with_errors' if @form_obj.errors[:content].any? %>">
    <%= label_tag "content", "Content" %>
    <%= text_area_tag "content", @form_obj.content %>
  </div>
 
  <%= submit_tag "Update" %>
<% end %>

