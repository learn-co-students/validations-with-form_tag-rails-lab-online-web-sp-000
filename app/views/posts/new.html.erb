<h2>Create a Post</h2>
<%= form_tag authors_path, method: "post" do %>
   <% if @author.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
      <ul>
        <% @author.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
 
  
  <div class="field"<%= ' field_with_errors' if @author.errors[:name].any? %>">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name", @author.name %>
  </div>

  <div class="field"<%= 'field_with_errors' if @author.errors[:content].any? %>">
    <%= label_tag "content", "Content" %>
    <%= text_field_tag "content", @author.content %>
  </div>

  <div class="field"<%= 'field_with_errors' if @author.errors[:category].any? %>">
    <%= label_tag "category", "Category" %>
    <%= text_field_tag "category", @author.category %>
  </div>
  
  <%= submit_tag "Create" %>
<% end %>
