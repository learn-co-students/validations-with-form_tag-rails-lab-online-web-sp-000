<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>Create a Post</h2>
<%= form_tag posts_path, method: "post" do %>
  <div class="field<%= ' field with errors' if @post.errors[:title].any? %>">
    <%= label_tag "title", "Title" %>
    <%= text_field_tag "title" %>
  </div>

  <div class="field<%= ' field with errors' if @post.errors[:category].any? %>">
    <%= label_tag "category", "Category" %>
    <%= text_field_tag "category" %>
  </div>

  <div class="field<%= ' field with errors' if @post.errors[:content].any? %>">
    <%= label_tag "content", "Content" %>
    <%= text_field_tag "content" %>
  </div>

  <%= submit_tag "Create" %>
<% end %>