<% if @author.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @author.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>Editing <%= @author.title %></h2>
<%= form_tag post_path(@author), method: "patch" do %>
    
  <% if @author.errors[:name].empty? %>
  <div class="field">
<% else %>
  <div class="field_with_errors">
<% end %>
  <%= label_tag "name", "Title" %>
  <%= text_field_tag "name", @author.name %>
</div>

<% if @author.errors[:email].empty? %>
  <div class="field">
<% else %>
  <div class="field_with_errors">
<% end %>
  <%= label_tag "email", "Category" %>
  <p>Must be either "Fiction" or "Non-Fiction".</p>
  <%= text_field_tag "email", @author.email %>
</div>

<% if @author.errors[:phone_number].empty? %>
  <div class="field">
<% else %>
  <div class="field_with_errors">
<% end %>
  <%= label_tag "phone_number", "Content" %>
  <br />
  <%= text_area_tag "phone_number", @author.phone_number %>
</div>
<%= submit_tag "Update" %>

<% end %>