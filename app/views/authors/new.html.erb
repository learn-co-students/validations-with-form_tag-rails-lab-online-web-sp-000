<h2>Create an Author</h2>
<%= form_tag authors_path, method: "post" do %>
  <% if @author.errors.any? %>
    <ul>
      <div id="error_explanation">
      <%# binding.pry %>
        <% @author.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </div>
    </ul>
  <% end %>

  <div class="field <%='field_with_errors' unless @author.errors[:name].empty?%>">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name", @author.name%>
  </div>

  <div class="field <%= 'field_with_errors' unless @author.errors[:email].empty?%>">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email", @author.email %>
  </div>

  <div class="field <%= 'field_with_errors' unless @author.errors[:phone_number].empty?%>">
    <%= label_tag "phone_number", "Phone Number" %>
    <%= text_field_tag "phone_number", @author.phone_number %>
  </div>

  <%= submit_tag "Create" %>
<% end %>
